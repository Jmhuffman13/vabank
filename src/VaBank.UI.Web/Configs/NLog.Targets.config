<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="VaBank.Common"/>
  </extensions>
  <targets>
    <target xsi:type="File" name="FileLog"
        fileName="${basedir}/logs/${shortdate}.log"
        layout="${onexception:${newline}}${longdate} | ${pad:padding=5:inner=${level:uppercase=true}} | ${logger} | ${message}${onexception:${newline}${exception:format=ToString}}"/>
    
    <target xsi:type="FixedDatabase" name="MaintenanceDbLog"
         dbProvider="System.Data.SQLite.SQLiteConnection, System.Data.SQLite" keepConnection="false"
         connectionString="Data Source=|DataDirectory|\Vabank.Maintenance.sqlite;Version=3;FailIfMissing=True"
         commandText="INSERT INTO Logs(Application, TimestampUtc, Level, Source, Message, Exception, User) 
          VALUES(@Application, @TimestampUtc, @Level, @Source, @Message, NULLIF(@Exception, ''), NULLIF(@User, ''))">
      <parameter name="@Application" layout="${literal:text=VaBank}"></parameter>
      <parameter name="@TimestampUtc" layout="${longdate:universalTime=True}"/>
      <parameter name="@Level" layout="${level:uppercase=true}"/>
      <parameter name="@Source" layout="${callsite:classname=true:methodname=true}"/>
      <parameter name="@Message" layout="${message}"/>
      <parameter name="@Exception" layout="${exception}"/>
      <parameter name="@User" layout="${identity:isAuthenticated=false:authType:false:separator=}"/>
    </target>
    
  </targets>
</nlog>
