@* Generator: Template *@
@* Namespace: VaBank.UI.Web.Views *@
@using System
@using System.Data.SQLite
@using Dapper
@using Newtonsoft.Json
@{
    var json = string.Empty;
    var connectionString = System.Configuration.ConfigurationManager.ConnectionStrings["Vabank.Db.Maintenance"].ConnectionString;
    using (var connection = new SQLiteConnection(connectionString))
    {
        var results = connection.Query("SELECT * FROM Logs ORDER BY TimestampUtc DESC LIMIT 30");
        json = JsonConvert.SerializeObject(results, Formatting.Indented);
    }
}
<html>
<head>
    <title>VaBank</title>
</head>
<body>
    <h1>Hello, World!</h1>
    Current time: @DateTime.Now
    <a href="/admin/hangfire">Hangfire Admin</a>
    <pre>
        @json
    </pre>
</body>
</html>
